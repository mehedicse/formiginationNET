
<script src="~/js/ops/profile/accountDetails.js" asp-file-version="true"></script>

<div class="row">

    <div class="form-horizontal">
        <h4 class="k-header">Your account info</h4>



        <input name="GeneralAccountId" type="hidden" id="txtGeneralAccountId" class="k-textbox" />

        <div class="form-group">
            <label name="Name" class="col-md-2 control-label">Name</label>
            <div class="col-md-8">
                <input name="Name" id="txtName" class="k-textbox" title="Name" />

            </div>
        </div>
        <div class="form-group">
            <label name="UserName" class="col-md-2 control-label">User Name</label>
            <div class="col-md-6">
                <input name="UserName" id="txtUserName" class="k-textbox" />

            </div>
        </div>
        <div class="form-group">
            <label name="Email" class="col-md-2 control-label">Email</label>
            <div class="col-md-6">
                <input name="Email" id="txtEmail" class="k-textbox" />

            </div>
        </div>
        <div class="form-group">
            <label name="AlternateEmail" class="col-md-2 control-label">Alternate Email</label>
            <div class="col-md-6">
                <input name="AlternateEmail" id="txtAlternateEmail" class="k-textbox" />

            </div>
        </div>
        <div class="form-group">
            <label name="Facebook" class="col-md-2 control-label">Facebook</label>
            <div class="col-md-6">
                <input name="Facebook" id="txtFacebook" class="k-textbox" />

            </div>
        </div>
        <div class="form-group">
            <label name="Gmail" class="col-md-2 control-label">Gmail</label>
            <div class="col-md-6">
                <input name="Gmail" id="txtGmail" class="k-textbox" />

            </div>
        </div>
        <div class="form-group">
            <label name="Yahoo" class="col-md-2 control-label">Yahoo</label>
            <div class="col-md-6">
                <input name="Yahoo" id="txtYahoo" class="k-textbox" />

            </div>
        </div>
        <div class="form-group">
            <label name="LinkedIn" class="col-md-2 control-label">LinkedIn</label>
            <div class="col-md-6">
                <input name="LinkedIn" id="txtLinkedIn" class="k-textbox" />

            </div>
        </div>
        <div class="form-group">
            <label name="Twitter" class="col-md-2 control-label">Twitter</label>
            <div class="col-md-6">
                <input name="Twitter" id="txtTwitter" class="k-textbox" />

            </div>
        </div>
        <div class="form-group">
            <label name="Microsoft" class="col-md-2 control-label">Microsoft</label>
            <div class="col-md-6">
                <input name="Microsoft" id="txtMicrosoft" class="k-textbox" />

            </div>
        </div>

        <div class="form-group">
            <label name="Skype" class="col-md-2 control-label">Skype</label>
            <div class="col-md-6">
                <input name="Skype" id="txtSkype" class="k-textbox" />

            </div>
        </div>

        <div class="form-group">
            <label for="About" class="col-md-2 control-label">About</label>
            <div class="col-md-6">
                <textarea  name="About" id="txtAbout" class="k-textbox"></textarea>

            </div>
        </div>
        <div class="form-group">
            <label   class="col-md-2 control-label"> </label>
            <div class="col-md-4">
                <button type="submit" id="btnAccountSave" class="btn btn-primary glyphicon glyphicon-save col-md-6" >Save</button>
            </div>
        </div>
    </div>
</div>